<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC
        "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" [
        <!--#include virtual="/opac/locale/${locale}/mohawk_opac.dtd" -->
        <!--#include virtual="/opac/locale/${locale}/opac.dtd"-->
]>

<html>
	<head>	
		<title>&slimpac.start.title;</title>
		<meta content="minimum-scale=1.0, width=device-width, maximum-scale=0.6667, user-scalable=no" name="viewport" />
		<style type="text/css">
			body {
                                padding: 3px;
                                color: #000;
                                margin: 0em;
                                font-size: 20pt;
				position: relative;
				min-height: 20em;
			/*	float: left;*/
                        }
			
			body a	{ color: black; text-decoration: none;}
			body a:visited { color: black; text-decoration: none;}
			body a:hover	{ color: #185bac; text-decoration: none;}
			
			.search_field {
				width: 100%;
				text-align: center;
				margin: auto;
				font-size: 14px;
				padding: 10px;
			}
			.formElement {
				font-size: 12px;
				margin: 2px;
			}
			#footer {
				width : 100%;
				position : relative;
				min-height : 10em;
				margin-top : 1em;
				height : auto;
				z-index : 0;
				overflow : hidden;
			}
			.menu {
			/*	background-color : #fff;*/
				border : 1px solid #878787;
				font-size : 14px;
				overflow : hidden;
				padding : 0;
				position : relative;
				display : block;
				height : auto;
				width : auto;
				margin : 0px;
				list-style : none;
			}
			.menu li:first-child {
				border-top : 0;
			}
			li.menuitem, li.form {
				position : relative;
				list-style-type : none;
				display : block;
				height :40px;
				overflow : hidden;
				border-top : 1px solid #878787;
				width : auto;
				background: url('http://libdog.mohawkcollege.ca/opac/images/menu_untouched.png') repeat-x #ffffff;
			}

			li.menuitem:hover {
				background: url('http://libdog.mohawkcollege.ca/opac/images/menutouched_red.png') repeat-x #cccccc;
			}


			li.menuitem a:hover span.name, li.menutem a:hover span.comment, li.store:hover .starcomment, li.store:hover .name, li.store:hover .comment, body.list li.withimage a:hover .comment {
				color : #fff;
				background-color: #ccc;
			}
			li.menuitem a {
				display : block;
				height : 40px;
				width : auto;
				text-decoration : none;
			}
			li.menuitem a img {
				width : auto;
				height : auto;
				margin : 5px 0 0 5px;
				padding-right : 5px;
				float : left;
			}
			li.menuitem span.menu_term {
				margin : 11px 0 0 2px;
				width : auto;
				color : #000;
				font-weight : bold;
				font-size : 15px;
				overflow : auto;
				max-width : 75%;
				white-space : nowrap;
				float : left;
				}
		</style>
	</head>
	<body>
		<div class='search_field'>
			<img src='/opac/images/main_logo.jpg' width='180' alt=''/>
		</div>
		<form method="GET" action="/opac/extras/opensearch/1.1/-/htmlmobile-full">
			<div class='search_field'><span style='color:black;' >&slimpac.start.nowSearching;</span>
				<select class="formElement" name="searchOrg">
					<!--#include file="${locale}/lib_list.inc" -->
				</select>
			</div>
			<div class='search_field'>
				<input type="text" name="searchTerms" size="20" class="formElement"/>
				<select class="formElement" name="searchClass">
					<option value="keyword">&common.keyword;</option>
					<option value="title">&common.title;</option>
					<option value="author">&common.author;</option>
					<option value="subject">&common.subject;</option>
					<option value="series">&common.series;</option>
				</select>
				<input type="submit" class="formElement" value="&button.go;"/>
			</div>
				</form>
  		<div id="footer">
    			<ul class="menu">
      				<li class="menuitem"><a href='mobile_advanced2.html'><span class="menu_term">&opac.navigate.advanced;</span></a></li>
      				<li class="menuitem"><a href='&footer.find.url;' target='_blank'><span class="menu_term">&footer.find.library;</span></a></li>
      				<li class="menuitem"><a target='_blank' href='&footer.help.url;'><span class="menu_term">&footer.help;</span></a></li>
      				<li class="menuitem"><a target='_blank' href='&footer.library.url;'><span class="menu_term">&footer.library.about;</span></a></li>
      				<li class="menuitem"><a href='/'><span class="menu_term">&slimpac.start.dynamic;</span></a></li>
    			</ul>
  		</div>
	</body>
</html>

